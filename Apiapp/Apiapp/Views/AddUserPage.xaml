<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Apiapp.AddUserPage">
    <ContentPage.Content>
        <StackLayout Padding="12">
            <Label Text="Nombre" />
            <Entry x:Name="BoxNombre" Text="{Binding Nombre}"/>
            <Label Text="Email" />
            <Entry x:Name="BoxEmail" Text="{Binding Email}"/>
            <Label Text="Cedula" />
            <Entry x:Name="BoxCedula" Text="{Binding Cedula}"/>
            <Button Text="Guardar" x:Name="BtnSave"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>